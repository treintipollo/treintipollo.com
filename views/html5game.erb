<!doctype html>
<html>
	<head>
		<meta charset="utf-8">

		<%= erb "og/#{@game}".to_sym %>
		<%= erb "head/#{@game}".to_sym %>

		<style>
			body {
				overflow: hidden;
				display: flex;
				margin: 0;
				padding: 0;

				background: black;
			}

			iframe {
				margin: 15px;
				padding: 0;

				border: 0px solid black;

				width: 100vw;
				height: calc(100vh - 30px);
			}
		</style>

		<%= erb "help/help-css".to_sym %>
	</head>
	<body>
		<%= erb "help/help-html".to_sym, :locals => { :game => @game } %>

		<%= erb "iframe/#{@game}".to_sym %>

		<%= erb "help/help-js".to_sym %>

		<script type="text/javascript">
			document.getElementById("game").focus();
		</script>
	</body>
</html>
