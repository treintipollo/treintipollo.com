<script type="text/javascript">
	var helpTab = document.querySelector(".help-tab > div");
	var allHelp = document.querySelector(".help-wrapper");

	helpTab.addEventListener("click", function(event) {
		if (allHelp.hasAttribute("showing")) {
			allHelp.removeAttribute("showing");
		}
		else {
			allHelp.setAttribute("showing", "");
		}
	});

	var fb = document.querySelector(".fb");

	fb.addEventListener("click", function(event) {
		event.preventDefault();

		var w = 800;
		var h = 450;
		var left = window.outerHeight / 2 + window.screenY - ( h / 2);
		var top = window.outerWidth / 2 + window.screenX - ( w / 2);

		var url = encodeURIComponent(window.top.location.href);
		var opts = 'resizable=no, status=1' + ',width=' + w + ',height=' + h + ',top=' + top + ',left=' + left;

		var win = window.open(
			"https://www.facebook.com/sharer/sharer.php?u="+url,
			"Share on Facebook",
			opts
		);
	});

	var tw = document.querySelector(".tw");

	tw.addEventListener("click", function(event) {
		event.preventDefault();

		function popupwindow(url, title, w, h) {
			var y = window.outerHeight / 2 + window.screenY - ( h / 2);
			var x = window.outerWidth / 2 + window.screenX - ( w / 2);
			
			window.open(url, title, 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=' + w + ', height=' + h + ', top=' + y + ', left=' + x);
		}

		var url = "https://twitter.com/intent/tweet?url=" + encodeURIComponent(window.top.location.href);

		popupwindow(url, "Share on Twitter", 800, 450);
	});

</script>